# Disable quit shortcut in VSCode
cmd - q [
  "code": : :
  "neovide": : :
]

# Remap native cmd - ` shortcut
cmd - 0x32 : ~/.config/scripts/cycle_app_windows

# dev tools
cmd - h : open -a 'Figma'
cmd - j : open -a 'Visual Studio Code'
cmd - k : open -a 'Safari'
cmd - l : open -a 'kitty'
cmd - g : open -a 'Simulator'

# communication tools
cmd - u : open -a 'Slack'
cmd - i : open -a 'Mail'
cmd - o : open -a 'zoom.us'

# other
cmd - m : open -a 'Spotify'
